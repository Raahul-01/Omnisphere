rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to generated_content collection
    match /generated_content/{document} {
      allow read: if true;
      allow write: if true; // For admin operations
    }

    // Allow public read access to articles collection
    match /articles/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow public read access to authors collection
    match /authors/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to categories collection
    match /categories/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read/write access to other collections for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
