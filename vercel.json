{
  "crons": [{
    "path": "/api/cron",
    "schedule": "0 */3 * * *"
  }],
  "env": {
    "PYTHON_API_URL": "@python-api-url",
    "CRON_SECRET": "@cron-secret"
  },
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 